<h2>Rediģēt <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label "E-pasts" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Gaida apstiprinājumu priekš: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label "Parole" %> <i>(atstāt tukšu, ja nevēlaties to mainīt!)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> minimums simbolu</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label "Paroles apstiprināšana" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "Pašreizējā parole" %> <i>(nepieciešama šī brīža parole, lai apstiprinātu izmaiņas)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Atjaunot" %>
  </div>
<% end %>

<h3>Atcelt profilu</h3>

<p>Kaut kas ne tā? <%= button_to "Atcelt profilu", registration_path(resource_name), data: { confirm: "Vai esat drošs?" }, method: :delete %></p>

<%= link_to "Atpakaļ", :back %>
